<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>

    <!-- custom css -->
    <link rel="stylesheet" href="../css/forgot.css">

    <!-- google icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- boxicons css -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="container">
        <h2 class="heading">Update password</h2>
        {{#if error}}<h6 class="error-message">{{error}}</h6>{{else}}{{/if}}
        {{#if message}}<h6 class="success-message">{{message}}</h6>{{else}}{{/if}}

        <div class="content-box">
            <form action="" method="POST">
                <div class="input-box">
                    <input name="password" type="password" placeholder="New password..." required>
                    <input name="confirm_password" type="password" placeholder="Re-enter new password..." required>
                </div>
                <button type="submit">Update password</button>
            </form>
        </div>
    </div>
</body>
</html>