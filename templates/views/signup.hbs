<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>

    <!-- custom css -->
    <link rel="stylesheet" href="../css/signup.css">

    <!-- google icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- boxicons css -->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <div class="container">
        {{#if title}}<h2 class="heading">{{title}} sign up</h2>{{else}}<h2 class="heading">Create a new account</h2>{{/if}}
        <h4 class="message-heading">It's quick and easy.</h4>
        {{#if error}}<h6 class="error-message">{{error}}</h6>{{else}}{{/if}}
        {{#if message}}<h6 class="success-message">{{message}}</h6>{{else}}{{/if}}

        <div class="content-box">
            <form action="" class="sign-up" method="POST" enctype="multipart/form-data">
               <div class="profile-picture-conatiner">
                    <input type="file" class="fileInput" name="profilePicture" style="display: none;">
                    <img class="uploadImage"  src="../images//Default-Profile-Picture-PNG-Free-Download.png" alt="">
               </div>
                
                <div class="input-box nameBoxes">
                    <input name="firstName" type="text" placeholder="First name" required autocomplete="on">
                    <input name="surname" type="text" placeholder="Surname" >
                </div>
                <div class="input-box">
                    <input name="email" type="email" placeholder="Email" required autocomplete="on">
                
                    <input name="password" type="password" placeholder="New password" required autocomplete="off">
                </div>
                
                <button type="submit">Sign Up</button>
            </form>
        </div>

        <div class="link">
            <a href="/">Already have an account?</a>
        </div>
    </div>

    <script src="../js/signup.js"></script>
</body>
</html>